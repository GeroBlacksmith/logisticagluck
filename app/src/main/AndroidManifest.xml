<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gero.gluck_logistica">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity android:name=".ui.activity.ClientesActivity" />
        <activity android:name=".ui.activity.ProductoActivity" />
        <activity android:name=".ui.activity.PedidoActivity" />
        <activity android:name=".ui.activity.StockActivity" />
        <activity android:name=".ui.activity.RutaActivity" />
        <activity android:name=".ui.activity.TransporteActivity" />
        <activity android:name=".ui.activity.ClienteDetalleActivity" />
        <activity android:name=".ui.activity.ClienteNuevoActivity" />
        <activity android:name=".ui.activity.PedidoNuevoActivity" />
        <activity android:name=".ui.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.RegistrarActivity"></activity>
    </application>

</manifest>