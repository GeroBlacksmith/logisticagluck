<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cliente_nuevo"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gero.gluck_logistica.ui.activity.ClienteNuevoActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/tv_agregar_cliente_nombre_titulo"/>
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese nombre de cliente"
        android:id="@+id/et_agregar_cliente_nombre"
        android:layout_below="@id/tv_agregar_cliente_nombre_titulo"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:id="@+id/tv_agregar_cliente_direccion_titulo"
        android:layout_below="@id/et_agregar_cliente_nombre"/>
    <EditText
        android:inputType="textPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la direccion"
        android:id="@+id/et_agregar_cliente_direccion"
        android:layout_below="@id/tv_agregar_cliente_direccion_titulo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono"
        android:id="@+id/tv_agregar_cliente_telefono_titulo"
        android:layout_below="@id/et_agregar_cliente_direccion"/>
    <EditText
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese telefono"
        android:id="@+id/et_agregar_cliente_telefono"
        android:layout_below="@id/tv_agregar_cliente_telefono_titulo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail"
        android:id="@+id/tv_agregar_cliente_mail_titulo"
        android:layout_below="@id/et_agregar_cliente_telefono"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Mail"
        android:inputType="textEmailAddress"
        android:id="@+id/et_agregar_cliente_mail"
        android:layout_below="@id/tv_agregar_cliente_mail_titulo"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INGRESAR CLIENTE"
        android:id="@+id/btn_agregar_cliente"
        android:layout_below="@id/et_agregar_cliente_mail"
        android:enabled="false"/>
</RelativeLayout>
