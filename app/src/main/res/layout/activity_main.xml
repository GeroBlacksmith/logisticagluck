<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4169E1"
    tools:context="com.example.gero.gluck_logistica.ui.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/boton_clientes"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="24dp"
                android:text="CLIENTES"
                android:background="#FF4040"
                android:layout_margin="16dp"/>

            <Button
                android:id="@+id/boton_pedidos"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="PEDIDOS"
                android:background="#FF4040"
                android:layout_margin="16dp"/>

            <Button
                android:id="@+id/boton_productos"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="PRODUCTOS"
                android:background="#FF4040"
                android:layout_margin="16dp"/>

            <Button
                android:id="@+id/boton_stock"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="STOCK"
                android:background="#FF4040"
                android:layout_margin="16dp"/>

            <Button
                android:id="@+id/boton_rutas"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="RUTAS"
                android:background="#FF4040"
                android:layout_margin="16dp"/>

            <Button
                android:id="@+id/boton_transportes"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="TRANSPORTES"
                android:background="#FF4040"
                android:layout_margin="16dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
